{
    "name": "fed2-workflow-ca",
    "version": "0.1.2",
    "description": "Workflow CA",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build": "sass src/scss:dist/css",
        "start": "sass --watch src/scss:dist/css & live-server",
        "format": "prettier -w '**/*.{html,js,json,scss}'",
        "lint": "eslint **/*.js",
        "lint-fix": "eslint *.js src/**/*.js cypress/**/*.js --cache --fix",
        "prepare": "husky install",
        "test-unit": "npm run test-unit-jest",
        "test-unit-jest": "jest",
        "test": "npm run test-e2e-cli",
        "test-e2e": "cypress open",
        "test-e2e-report": "cypress run --reporter mochawesome",
        "test-e2e-cli": "cypress run"
    },
    "keywords": [],
    "author": "Noroff",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.25.8",
        "@babel/preset-env": "^7.25.8",
        "@eslint/js": "^9.12.0",
        "cypress": "^13.15.0",
        "eslint": "^9.12.0",
        "eslint-plugin-cypress": "^4.0.0",
        "eslint-plugin-jest": "^28.8.3",
        "globals": "^15.11.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "live-server": "^1.2.0",
        "prettier": "^3.3.3",
        "sass": "^1.54.8"
    },
    "dependencies": {
        "bootstrap-dark-5": "^1.1.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EliNygard/fed2-wf-ca-social-media-client.git"
    },
    "bugs": {
        "url": "https://github.com/EliNygard/fed2-wf-ca-social-media-client/issues"
    },
    "homepage": "https://github.com/EliNygard/fed2-wf-ca-social-media-client#readme",
    "lint-staged": {
        "*.js": "eslint --fix",
        "*.cy.js": "eslint --fix",
        "*.{html,js,json,scss}": "prettier --write"
    }
}
